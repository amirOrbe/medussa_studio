<.form class="w-full max-w-lg justify-center items-center" let={f} for={@changeset} action={Routes.user_registration_path(@conn, :create)}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :nombre %>
  <%= text_input f, :name, required: true %>
  <%= error_tag f, :name %>

  <%= label f, :correo %>
  <%= email_input f, :email, required: true %>
  <%= error_tag f, :email %>

  <%= label f, :contraseÃ±a %>
  <%= password_input f, :password, required: true %>
  <%= error_tag f, :password %>

  <%= label f, :age %>
  <%= select f, :age, 8..80 %>
  <%= error_tag f, :age %>

  <%= label f, :phone  %>
  <%= text_input f, :phone, pattern: "[0-9]*"%>
  <%= error_tag f, :phone %>



  <div>
    <button class="btn btn-green">Register</button>
  </div>
</.form>

<p class="flex justify-center items-center">
  <%= link "Log in", to: Routes.user_session_path(@conn, :new) %> |
  <%= link "Forgot your password?", to: Routes.user_reset_password_path(@conn, :new) %>
</p>
